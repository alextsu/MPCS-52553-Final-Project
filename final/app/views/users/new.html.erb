
<h1>Create New User</h1>
<%= form_tag "/", :method => 'post' do %>
	<div>
		<label for="title">Email:</label>
		<input size="80" name="email" id="email" >
	</div>

	<div>
		<label>University:</label>
		<select name="university">
			<!--Loop through all the Universities and get each name. Later iterations will allow for inputing new University-->
			<% @universities.each do |university| %> 
				<option><%= university.name%></option>
			<% end %>
		</select>
	</div>

	<div>
		<label for="title">Graduation Year:</label>
		<input size="80" name="graduation_year" id="graduation_year" >
	</div>

	<div>
		<label>Location: </label>
		<select name="location">
			<!--Loop through all the Locations and get each name. Later iterations will allow for inputing new Location-->
			<% @locations.each do |location| %> 
				<option><%= location.city%></option>
			<% end %>
		</select>
	</div>

<br>
  <input type="submit" name="commit" value="Create User">

<% end %>