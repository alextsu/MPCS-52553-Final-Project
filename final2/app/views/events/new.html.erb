<h2>Add an Event</h2>
<h3>Create a New Events Page:</h3>
<% if @event.errors.any? %>
	<ul class="errors">
		<% @event.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
 	</ul>
<% end %>

<%= form_tag "/events", :method => 'post' do %>

	<p>
		<%= label_tag :name %>
		<%= text_field_tag :name %>
	</p>

	<p>
		<%= label_tag :address %>
		<%= text_field_tag :address %>
	</p>

	<p>
		<label>City </label>
		<select name="location">
			<% @locations.each do |location| %> 
			<option><%= location.city%></option>
			<% end %>
		</select>
	</p>

	<p>
		<%= label_tag :start_time %>
		<%= text_field_tag :start_time %>
	</p>

	<p>
		<%= label_tag :end_time %>
		<%= text_field_tag :end_time %>
	</p>

	<p>
		<label>Description</label>
  		<textarea name="description" cols="80" rows="3"></textarea>
  	</p>

	<p>
		<%= label_tag :organizer_contact_email %>
		<%= text_field_tag :organizer_contact_email  %>
	</p>
	
	<p>
		<label>University</label>
		<select name="university">
			<% @universities.each do |university| %> 
			<option><%= university.name%></option>
			<% end %>
		</select>
	</p>

	<%= submit_tag "Create Event Page" %>

<% end %>
<p><%= link_to "Back to events page", "/events" %> </p>