<!--
Purpose: Present text fields that allow user to fill in info for a new university.
-->

<h2>Add a University</h2>

<% if @university.errors.any? %>
<ul class="errors">
	<% @university.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
</ul>
<% end %>

<%= form_tag "/universities", :method => 'post' do %>

<p>
	<%= label_tag :name %>
	<%= text_field_tag :name %>
</p>

<p>
	<label>Location </label>
	<select name="location">
		<% @locations.each do |location| %> 
		<option><%= location.city%></option>
		<% end %>
	</select>
	<br>
	<%= link_to "Add a new location", "/locations/new" %>
</p>

<p>
	<label>Description</label>
	<textarea name="description" cols="80" rows="3"></textarea>
</p>

<p>
	<%= label_tag :url_to_logo %>
	<%= text_field_tag :logo_url %>
</p>

<%= submit_tag "Add University" %>


<% end %>
<p><%= link_to "Back to universities page", "/universities" %> </p>




