<!--
Purpose: Present user with text box for login email and password. Include a link to password_resets if he/she chooses to reset password. 
-->

<h3>Sign In</h3>
<%= form_tag "/sessions" do %>
<p>
	<%= label_tag :email %>
	<%= text_field_tag :email %>
</p>
<p>
	<%= label_tag :password %>
	<%= password_field_tag :password %>
</p>

<p><%= link_to "Forgot your password?", new_password_reset_path %></p>
<%= submit_tag "Submit" %>
<% end %>